<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/relayout_toolbar_top_message_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar"
        android:orientation="horizontal" 
        android:gravity="center"
        >
        <RadioGroup 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/button_pre_day"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_button_left"
                android:text="@string/lablel_tody"
                android:textColor="@android:color/white"
                android:lines="1"
                android:button="@null"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" 
                android:layout_marginRight="-1dp"/>

            <RadioButton
                android:id="@+id/button_pre_week"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_button_center"
                android:text="@string/label_week"
                android:lines="1"
                android:button="@null"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/button_pre_all"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_button_right"
                android:text="@string/label_all"
                android:textColor="@android:color/white"
                android:textStyle="bold" 
                android:layout_marginRight="10dp"
                android:lines="1"
                android:button="@null"
                android:layout_marginLeft="-1dp"/>
		</RadioGroup>
    </LinearLayout>

<ListView
    android:id="@+id/list_review_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relayout_toolbar_top_message_view"
    android:layout_centerHorizontal="true"
    android:scrollbars="none"
    android:background="@android:color/white"
    android:divider="@drawable/divider" >

</ListView>
<ProgressBar 
    android:id="@+id/review_more_progress_update"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relayout_toolbar_top_message_view"
    android:layout_alignParentRight="true"/>

</RelativeLayout>