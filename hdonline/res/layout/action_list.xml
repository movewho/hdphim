<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroung_menu_list">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true" >

    <EditText 
                android:id="@+id/relayout_toolbar_top_message_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/search_bar"
        android:hint="Tìm kiếm"
        android:paddingLeft="10dp"/>
    <ListView
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relayout_toolbar_top_message_view"
        android:cacheColorHint="@color/actions_bg"
        android:dividerHeight="@dimen/divider_size"
        android:layout_marginTop="-2.5dp">

    </ListView>
</RelativeLayout>

</LinearLayout>
