<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
       <item android:state_checked="true" >
        <shape>
            <solid
                android:color="#151515" />
            <stroke
                android:width="1dp"
                android:color="#A4A4A4" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#585858"
                android:centerColor="#424242"
                android:endColor="#585858"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A4A4A4" />
            <corners android:radius="0dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>