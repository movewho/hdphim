<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   <item android:state_pressed="true">
         <shape>
            <gradient
                android:startColor="#424242"
                android:centerColor="#585858"
                android:endColor="#424242"
                android:angle="270" />
            <corners android:radius="5dp"/>
             <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
     </item>
     
     <item>
        <shape>
            <gradient
                android:startColor="#585858"
                android:centerColor="#424242"
                android:endColor="#585858"
                android:angle="270" />
          
            <corners 
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>